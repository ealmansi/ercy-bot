    "express": "^4.16.2",
    "left-pad": "^1.2.0",
    "moment": "^2.19.2",
    "promise-retry": "^1.1.1",
    "redis": "^2.8.0",
    "redis-server": "^1.1.0",
    "slack-node": "^0.1.8",
    "web3": "^0.19.0",
    "winston": "^2.4.0"
  },
