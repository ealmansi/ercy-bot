{
  "name": "ercy-bot",
  "version": "1.0.0",
  "description": "ErcyBot: real-time feed of Ethereum token transfers in your Slack workspace.",
  "main": "index.js",
  "scripts": {
    "start": "HOSTNAME=$NETWORK NODE_ENV=production node index.js",
